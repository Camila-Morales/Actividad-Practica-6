@page
@model EstudiantesRazor.Pages.MateriasMaster.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>EDITAR</h1>

<h4>Materia</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Materia.IdMateria" />
            <div class="form-group">
                <label asp-for="Materia.Nombre" class="control-label"></label>
                <input asp-for="Materia.Nombre" class="form-control" />
                <span asp-validation-for="Materia.Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Materia.Descripcion" class="control-label"></label>
                <input asp-for="Materia.Descripcion" class="form-control" />
                <span asp-validation-for="Materia.Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group m-2">
                <input type="submit" value="Save" class="btn btn-primary" />
                &nbsp;&nbsp; <a asp-page="./Index" class="btn btn-success">Regresar a la lista</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
