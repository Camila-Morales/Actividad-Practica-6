@page
@model EstudiantesRazor.Pages.EstudiantesMaster.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">INGRESAR ESTUDIANTE</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Estudiantes[0].Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estudiantes[0].Apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estudiantes[0].FechaNacimiento)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @if(Model.Estudiantes !=null && Model.Estudiantes.Any())
        {
            @foreach (var item in Model.Estudiantes)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Apellido)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FechaNacimiento)
                    </td>
                    <td>
                        <a asp-page="./Edit" class="btn btn-warning" asp-route-id="@item.IdEstudiantes">Edit</a> |
                        <a asp-page="./Details" class="btn btn-primary" asp-route-id="@item.IdEstudiantes">Details</a> |
                        <a asp-page="./Delete" class="btn btn-danger" asp-route-id="@item.IdEstudiantes">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
           <tr>
                <td colspan="4" class="text-center">
                    Estudiantes no disponibles en la base de datos.
                </td>
           </tr>

        }
    </tbody>
</table>
